{% extends "layout.njk" %}

{% block content %}
<main class="container region flow">
  <h1>{{ title }}</h1>
  <p>{{ message }}</p>
  <ul class="tweets flow">
    {% for tweet in tweets %}
      <li class="tweet">
        <article>
          <header>
            <h2>{{ tweet.name }}</h2>
            <time datetime="{{ tweet.date }}">{{ tweet.date }}</time>
          </header>
          <p>{{ tweet.message }}</p>
          <footer>
            <ul>
              <li>Shared</li>
              <li>Reply</li>
              <li>Favourite</li>
            </ul>
          </footer>
        </article>
      </li>
    {% endfor %}
  </ul>
</main>
{% endblock %}